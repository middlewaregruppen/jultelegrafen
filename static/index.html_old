<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
  <meta charset="UTF-8" />
  <title>Go + Alpine.js SPA</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Alpine.js from CDN (no build step) -->
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      margin: 0;
      background: #0f172a;
      color: #e5e7eb;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }
    .app {
      background: #020617;
      border-radius: 0.75rem;
      padding: 1.75rem 2rem;
      box-shadow: 0 20px 45px rgba(15, 23, 42, 0.9);
      width: 100%;
      max-width: 480px;
      border: 1px solid #1f2937;
    }
    h1 {
      margin: 0 0 0.5rem;
      font-size: 1.7rem;
    }
    .subtitle {
      margin: 0 0 1.5rem;
      color: #9ca3af;
      font-size: 0.9rem;
    }
    .card {
      background: radial-gradient(circle at top left, #1d4ed8, #020617 55%);
      border-radius: 0.75rem;
      padding: 1.25rem 1.5rem;
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(148, 163, 184, 0.2);
    }
    .label {
      font-size: 0.75rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: #a5b4fc;
      margin-bottom: 0.25rem;
    }
    .message {
      font-size: 1.1rem;
      font-weight: 500;
    }
    .controls {
      display: flex;
      gap: 0.75rem;
      margin-top: 1.25rem;
      flex-wrap: wrap;
    }
    button {
      cursor: pointer;
      border-radius: 999px;
      border: 1px solid #4b5563;
      background: #111827;
      color: #e5e7eb;
      padding: 0.45rem 0.9rem;
      font-size: 0.85rem;
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      transition: background 0.15s ease, transform 0.1s ease, border-color 0.15s;
    }
    button.primary {
      background: linear-gradient(135deg, #22c55e, #16a34a);
      border-color: transparent;
      color: #022c22;
      font-weight: 600;
    }
    button:hover {
      transform: translateY(-1px);
      background: #030712;
    }
    button.primary:hover {
      background: linear-gradient(135deg, #4ade80, #16a34a);
    }
    button:disabled {
      opacity: 0.6;
      cursor: default;
      transform: none;
    }
    input {
      flex: 1 1 auto;
      min-width: 0;
      border-radius: 999px;
      border: 1px solid #4b5563;
      background: #020617;
      color: #e5e7eb;
      padding: 0.4rem 0.75rem;
      font-size: 0.85rem;
      outline: none;
    }
    input:focus {
      border-color: #60a5fa;
      box-shadow: 0 0 0 1px rgba(37, 99, 235, 0.5);
    }
    .pill-row {
      display: flex;
      gap: 0.4rem;
      margin-top: 0.7rem;
      flex-wrap: wrap;
      font-size: 0.8rem;
      color: #9ca3af;
    }
    .pill {
      border-radius: 999px;
      border: 1px solid rgba(148, 163, 184, 0.35);
      padding: 0.1rem 0.55rem;
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      background: rgba(15, 23, 42, 0.8);
    }
    .pill-dot {
      width: 7px;
      height: 7px;
      border-radius: 999px;
      background: #22c55e;
    }
    .pill-dot.error {
      background: #f97316;
    }
    .status {
      margin-top: 0.75rem;
      font-size: 0.8rem;
      color: #9ca3af;
      min-height: 1.2em;
    }
    a {
      color: #93c5fd;
      text-decoration: none;
    }
  </style>
</head>
<body>
<div
  class="app"
  x-data="spaApp()"
  x-init="init()"
>
  <h1>Go + Alpine.js SPA</h1>
  <p class="subtitle">
    Single page app with a Go backend and a lightweight Alpine.js frontend.
  </p>
  <div class="card">
    <div class="label">Backend Message</div>
    <div class="message" x-text="displayMessage"></div>
    <div class="pill-row">
      <div class="pill">
        <span class="pill-dot" :class="isOnline ? '' : 'error'"></span>
        <span x-text="isOnline ? 'Backend reachable' : 'Backend offline'"></span>
      </div>
      <div class="pill">
        <span>Client state:</span>
        <strong x-text="clientState"></strong>
      </div>
    </div>
    <div class="controls">
      <input
        type="text"
        placeholder="Type a custom message..."
        x-model="customMessage"
      />
      <button
        type="button"
        class="primary"
        @click="postMessage"
        :disabled="isLoading || !customMessage.trim()"
      >
        <span x-show="!isLoading">Send</span>
        <span x-show="isLoading">Sending...</span>
      </button>
      <button
        type="button"
        @click="fetchMessage"
        :disabled="isLoading"
      >
        Refresh from Go
      </button>
    </div>
    <div class="error" x-text="errorText" if="errorText.trim()"></div>
  </div>
</div>
<script>
  function spaApp() {
    return {
      // Reactive state
      displayMessage: 'Loading...',
      customMessage: '',
      statusText: '',
      errorText: '',
      isLoading: false,
      isOnline: false,
      clientState: 'idle',
      init() {
        // Initial fetch from backend when SPA loads
        this.fetchMessage()
      },
      tomteSvordom() {
        const uttryck = [
          "Nissarnas nötkräm!",
          "Pepparkakspluttar!",
          "Tomtegröt och järnspikar!",
          "Renslädans rullrån!",
          "Skäggiga strumpor!",
          "Attans bananer och knäck!",
          "Milde mistelkvast!",
          "Julgrötens glöd!",
          "Snögubbens snurrflingor!",
          "Nisseknytt och polkagriskrumelurer!"
        ];

        const index = Math.floor(Math.random() * uttryck.length);
        return uttryck[index];
      },
      async postMessage() {

        this.isLoading = true
        this.clientState = 'syncing'
        this.statusText = 'Sending message to /api/message ...'
        try {
          const res = await fetch('/api/message', {
            method: 'POST',
            body: JSON.stringify({
              content: this.customMessage,
              author: "amir",
              created: new Date(),
            })
          })
          if (!res.ok) throw new Error('HTTP ' + res.status)
          const data = await res.json()

          this.displayMessage = data.message || '(no message field)'
          this.statusText = 'Fetched from Go backend at ' + new Date().toLocaleTimeString()
          this.isOnline = true
          this.clientState = 'synced'
        } catch (err) {
          this.displayMessage = 'Could not reach backend'
          this.statusText = 'Error: ' + err.message
          this.isOnline = false
          this.clientState = 'error'
          this.errorText = this.tomteSvordom() + ". Något gick snett: " + err.message 
        } finally {
          this.isLoading = false
        }
      },
      async fetchMessage() {
        this.isLoading = true
        this.clientState = 'syncing'
        this.statusText = 'Fetching message from /api/message ...'
        try {
          const res = await fetch('/api/message')
          if (!res.ok) throw new Error('HTTP ' + res.status)
          const data = await res.json()
          this.displayMessage = data.message || '(no message field)'
          this.statusText = 'Fetched from Go backend at ' + new Date().toLocaleTimeString()
          this.isOnline = true
          this.clientState = 'synced'
        } catch (err) {
          this.displayMessage = 'Could not reach backend'
          this.statusText = 'Error: ' + err.message
          this.isOnline = false
          this.clientState = 'error'
        } finally {
          this.isLoading = false
        }
      },
      async sendCustomMessage() {
        if (!this.customMessage.trim()) return
        this.clientState = 'local-update'
        this.displayMessage = this.customMessage
        this.statusText = 'Updated locally (demo: no POST endpoint yet)'
        this.customMessage = ''
      },
    }
  }
</script>
</body>
</html>
